<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="-2dp"
    tools:context="com.firstproject.siaum.calculator.MainActivity">

    <EditText
        android:id="@+id/screen"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:cursorVisible="false"
        android:editable="false"
        android:gravity="right"
        android:text="0"
        android:textSize="40dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <info.hoang8f.widget.FButton
            android:id="@+id/buttonFactorial"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            fbutton:shadowEnabled="false"
            fbutton:buttonColor="@color/white"
            fbutton:shadowColor="@color/fbutton_color_clouds"
            fbutton:cornerRadius="5dp"
            android:onClick="ButtonClickHandler"
            android:text="@string/function_factorial" />


        <info.hoang8f.widget.FButton
            android:id="@+id/buttonPercent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            fbutton:shadowEnabled="false"
            fbutton:buttonColor="@color/white"
            fbutton:shadowColor="@color/fbutton_color_clouds"
            fbutton:cornerRadius="5dp"
            android:onClick="ButtonClickHandler"
            android:text="@string/character_percent" />

        <info.hoang8f.widget.FButton
            android:id="@+id/buttonOneByX"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            fbutton:shadowEnabled="false"
            fbutton:buttonColor="@color/white"
            fbutton:shadowColor="@color/fbutton_color_clouds"
            fbutton:cornerRadius="5dp"
            android:onClick="ButtonClickHandler"
            android:text="@string/function_one_by_x" />

        <info.hoang8f.widget.FButton
            android:id="@+id/buttonLeftBracket"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            fbutton:shadowEnabled="false"
            fbutton:buttonColor="@color/white"
            fbutton:shadowColor="@color/fbutton_color_clouds"
            fbutton:cornerRadius="5dp"
            android:onClick="ButtonClickHandler"
            android:text="@string/character_bracket_left" />

        <info.hoang8f.widget.FButton
            android:id="@+id/buttonBracketRight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            fbutton:shadowEnabled="false"
            fbutton:buttonColor="@color/white"
            fbutton:shadowColor="@color/fbutton_color_clouds"
            fbutton:cornerRadius="5dp"
            android:onClick="ButtonClickHandler"
            android:text="@string/character_bracket_right" />

        <info.hoang8f.widget.FButton
            android:id="@+id/buttonC"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            fbutton:shadowEnabled="false"
            fbutton:buttonColor="@color/white"
            fbutton:shadowColor="@color/fbutton_color_clouds"
            fbutton:cornerRadius="5dp"
            android:onClick="ButtonClickHandler"
            android:text="@string/character_C" />

        <info.hoang8f.widget.FButton
            android:id="@+id/buttonDel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            fbutton:shadowEnabled="false"
            fbutton:buttonColor="@color/white"
            fbutton:shadowColor="@color/fbutton_color_clouds"
            fbutton:cornerRadius="5dp"
            android:onClick="ButtonClickHandler"
            android:text="@string/character_delete" />

        <info.hoang8f.widget.FButton
            android:id="@+id/buttonDivision"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            fbutton:shadowEnabled="false"
            fbutton:buttonColor="@color/white"
            fbutton:shadowColor="@color/fbutton_color_clouds"
            fbutton:cornerRadius="5dp"
            android:onClick="ButtonClickHandler"
            android:text="@string/character_divide" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonPower2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="ButtonClickHandler"
            android:text="@string/function_power_2" />

        <Button
            android:id="@+id/buttonPower3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="ButtonClickHandler"
            android:text="@string/function_power_3" />

        <Button

            android:id="@+id/buttonPowerToN"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="ButtonClickHandler"
            android:text="@string/function_power_n" />

        <Button
            android:id="@+id/buttonNumberE"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="ButtonClickHandler"
            android:text="@string/character_e" />

        <Button
            android:id="@+id/button7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="ButtonClickHandler"
            android:text="@string/character_7" />

        <Button
            android:id="@+id/button8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="ButtonClickHandler"
            android:text="@string/character_8" />

        <Button
            android:id="@+id/button9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="ButtonClickHandler"
            android:text="@string/character_9" />

        <Button
            android:id="@+id/buttonMultiplication"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="ButtonClickHandler"
            android:text="@string/character_multiple" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonSqrt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="ButtonClickHandler"
            android:text="@string/function_sqrt" />

        <Button

            android:id="@+id/buttonSqrt3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="ButtonClickHandler"
            android:text="@string/function_sqrt_3" />

        <Button
            android:id="@+id/buttonLog"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="ButtonClickHandler"
            android:text="@string/function_log" />

        <Button
            android:id="@+id/buttonLog10"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="ButtonClickHandler"
            android:text="@string/function_log_10" />

        <Button
            android:id="@+id/button4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="ButtonClickHandler"
            android:text="@string/character_4" />

        <Button
            android:id="@+id/button5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="ButtonClickHandler"
            android:text="@string/character_5" />

        <Button
            android:id="@+id/button6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="ButtonClickHandler"
            android:text="@string/character_6" />

        <Button
            android:id="@+id/buttonMinus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="ButtonClickHandler"
            android:text="@string/character_minus" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonSin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="ButtonClickHandler"
            android:text="@string/function_sin" />

        <Button
            android:id="@+id/buttonCos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="ButtonClickHandler"
            android:text="@string/function_cos" />

        <Button
            android:id="@+id/buttonTan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="ButtonClickHandler"
            android:text="@string/function_tan" />

        <Button
            android:id="@+id/buttonPi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="ButtonClickHandler"
            android:text="@string/character_pi" />

        <Button
            android:id="@+id/button1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="ButtonClickHandler"
            android:text="@string/character_1" />

        <Button
            android:id="@+id/button2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="ButtonClickHandler"
            android:text="@string/character_2" />

        <Button
            android:id="@+id/button3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="ButtonClickHandler"
            android:text="@string/character_3" />

        <Button
            android:id="@+id/buttonAdd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="ButtonClickHandler"
            android:text="@string/character_plus" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonSinh"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="ButtonClickHandler"
            android:text="@string/function_sinh" />

        <Button
            android:id="@+id/buttonCosh"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="ButtonClickHandler"
            android:text="@string/function_cosh" />

        <Button
            android:id="@+id/buttonTanh"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="ButtonClickHandler"
            android:text="@string/function_tanh" />

        <Button
            android:id="@+id/buttonRand"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="ButtonClickHandler"
            android:text="@string/function_rand" />

        <Button
            android:id="@+id/buttonPoint"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="ButtonClickHandler"
            android:text="@string/character_coma" />

        <Button
            android:id="@+id/button0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="ButtonClickHandler"
            android:text="@string/character_0" />

        <Button
            android:id="@+id/buttonPlusMinus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="ButtonClickHandler"
            android:text="@string/character_plus_minus" />

        <Button
            android:id="@+id/buttonEquals"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="ButtonClickHandler"
            android:text="@string/character_equal" />
    </LinearLayout>
</LinearLayout>
